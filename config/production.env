# CAS Platform Production Environment Configuration
# ================================================

# Security Configuration
# ----------------------
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production-2024
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# Database Configuration
# ----------------------
POSTGRES_DB=cas_dms_prod
POSTGRES_USER=cas_user_prod
POSTGRES_PASSWORD=your-super-secure-db-password-2024
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# MinIO Configuration
# -------------------
MINIO_ROOT_USER=minioadmin_prod
MINIO_ROOT_PASSWORD=your-super-secure-minio-password-2024
MINIO_ENDPOINT=minio:9000
MINIO_SECURE=false

# RabbitMQ Configuration
# ----------------------
RABBITMQ_DEFAULT_USER=cas_user_prod
RABBITMQ_DEFAULT_PASS=your-super-secure-rabbitmq-password-2024
RABBITMQ_URL=amqp://cas_user_prod:your-super-secure-rabbitmq-password-2024@rabbitmq:5672/

# OTRS Integration
# ----------------
OTRS_API_URL=https://otrs.company.com/api
OTRS_API_KEY=your-otrs-api-key-2024
OTRS_USERNAME=otrs_user
OTRS_PASSWORD=your-otrs-password-2024

# Email Configuration
# -------------------
SMTP_HOST=mail.company.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password-2024
SMTP_USE_TLS=true
ADMIN_EMAIL=admin@company.com

# Backup Configuration
# --------------------
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-2024

# Monitoring Configuration
# ------------------------
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password-2024
PROMETHEUS_RETENTION_DAYS=90

# LLM Configuration
# -----------------
OLLAMA_HOST=0.0.0.0
OLLAMA_ORIGINS=*
DEFAULT_LLM_MODEL=mistral:7b

# NAS Configuration
# -----------------
NAS_SERVER=192.168.1.100
NAS_PATH=/mnt/nas/cas-data
NAS_USERNAME=nas_user
NAS_PASSWORD=your-nas-password-2024

# Logging Configuration
# ---------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/cas-platform.log

# Performance Configuration
# -------------------------
MAX_WORKERS=4
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30
RATE_LIMIT_PER_MINUTE=100

# Security Headers
# ----------------
CORS_ORIGINS=https://admin.company.com,https://api.company.com
TRUSTED_HOSTS=admin.company.com,api.company.com
