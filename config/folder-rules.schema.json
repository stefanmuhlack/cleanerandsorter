{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Folder Rules",
  "type": "object",
  "properties": {
    "customers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "folders": {
            "type": "array",
            "items": { "type": "string", "enum": ["Projekte","Portale","Kampagnen","Angebote","Archiv","Allgemein"] }
          }
        }
      }
    },
    "internal_roots": {
      "type": "array",
      "items": { "type": "string" }
    },
    "year_template": { "type": "string", "pattern": "\\{\\{year\\}\\}" }
  },
  "additionalProperties": true
}

